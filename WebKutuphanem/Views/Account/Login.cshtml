@model WebKutuphanem.ViewModels.LoginViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Giriş Yap - Web Kütüphanem</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
            /* Masaüstü için Varsayılan Arkaplan */
            background: linear-gradient(135deg, #e3f2fd 0%, #bbdefb 50%, #90caf9 100%);
        }

        /* --- VİDEO AYARLARI --- */
        #bg-video {
            position: fixed;
            right: 0;
            bottom: 0;
            min-width: 100%;
            min-height: 100%;
            z-index: -1; /* Her şeyin arkasında */
            object-fit: cover; /* Ekranı doldur */
            
            display: none; /* Varsayılan olarak gizli (Masaüstü için) */
        }

        /* DÜZELTME: Razor hatasını önlemek için @@media kullanıldı */
        @@media (max-width: 768px) {
            #bg-video {
                display: block;
            }

            body {
                background: transparent;
            }
            /* Body rengini kapat ki video görünsün */
        }

        .login-container {
            width: 100%;
            max-width: 450px;
        }

        .login-card {
            border-radius: 20px;
            padding: 40px 30px;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
            /* --- ŞEFFAFLIK VE CAM EFEKTİ (GLASSMORPHISM) --- */
            background: rgba(255, 255, 255, 0.75); /* %75 Beyaz */
            backdrop-filter: blur(10px); /* Arkadaki videoyu bulanıklaştır */
            -webkit-backdrop-filter: blur(10px); /* Safari desteği */
            border: 1px solid rgba(255, 255, 255, 0.5);
            animation: fadeInUp 0.6s ease-out;
        }

        /* Razor hatasını önlemek için @@keyframes kullanıldı */
        @@keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .login-header {
            text-align: center;
            margin-bottom: 30px;
        }

            .login-header h1 {
                color: #1976d2;
                font-size: 28px;
                font-weight: 700;
                margin-bottom: 5px;
            }

            .login-header p {
                color: #555;
                font-size: 14px;
                font-weight: 500;
            }

        .input-group-custom {
            position: relative;
            margin-bottom: 20px;
        }

            .input-group-custom .icon {
                position: absolute;
                left: 15px;
                top: 43px;
                color: #1976d2;
                font-size: 18px;
                z-index: 10;
            }

            .input-group-custom input {
                width: 100%;
                padding: 12px 15px 12px 45px;
                border: 2px solid rgba(0,0,0,0.1); /* Çerçeveyi hafiflet */
                border-radius: 12px;
                font-size: 15px;
                transition: all 0.3s ease;
                background: rgba(255, 255, 255, 0.9); /* Input içi daha opak olsun ki yazı okunsun */
            }

                .input-group-custom input:focus {
                    outline: none;
                    border-color: #1976d2;
                    background: #ffffff;
                    box-shadow: 0 0 0 4px rgba(25, 118, 210, 0.1);
                }

            .input-group-custom label {
                display: block;
                margin-bottom: 6px;
                color: #333;
                font-weight: 600;
                font-size: 13px;
            }

        .remember-me {
            display: flex;
            align-items: center;
            margin-bottom: 20px;
        }

            .remember-me input {
                width: 16px;
                height: 16px;
                margin-right: 8px;
                accent-color: #1976d2;
            }

            .remember-me label {
                color: #444;
                font-size: 14px;
                cursor: pointer;
            }

        .btn-login {
            width: 100%;
            padding: 14px;
            background: linear-gradient(135deg, #1976d2 0%, #1565c0 100%);
            color: white;
            border: none;
            border-radius: 12px;
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            box-shadow: 0 4px 15px rgba(25, 118, 210, 0.3);
        }

            .btn-login:hover {
                transform: translateY(-2px);
                box-shadow: 0 6px 20px rgba(25, 118, 210, 0.4);
            }

        .register-link {
            text-align: center;
            margin-top: 20px;
            color: #444;
            font-size: 14px;
        }

            .register-link a {
                color: #1976d2;
                text-decoration: none;
                font-weight: 700;
            }

                .register-link a:hover {
                    text-decoration: underline;
                }

        .text-danger {
            color: #d32f2f;
            font-size: 13px;
            margin-bottom: 15px;
            padding: 10px;
            background: rgba(255, 235, 238, 0.9);
            border-radius: 8px;
            border-left: 4px solid #d32f2f;
            display: none;
        }

            .text-danger:not(:empty) {
                display: block;
            }

        .validation-error {
            color: #d32f2f;
            font-size: 12px;
            margin-top: 4px;
            display: block;
        }
    </style>
</head>
<body>

    <video autoplay muted loop playsinline id="bg-video">
        <source src="~/videos/mobile-bg.mp4" type="video/mp4">
    </video>

    <div class="login-container">
        <div class="login-card">
            <div class="login-header">
                <h1><i class="fas fa-user-circle"></i> Giriş Yap</h1>
                <p>Kütüphaneye hoş geldiniz</p>
            </div>

            <form asp-action="Login" asp-controller="Account" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="input-group-custom">
                    <label asp-for="UserName">Kullanıcı Adı</label>
                    <input asp-for="UserName" type="text" placeholder="Kullanıcı adınızı girin" autocomplete="username" />
                    <i class="fas fa-user icon"></i>
                    <span asp-validation-for="UserName" class="validation-error"></span>
                </div>

                <div class="input-group-custom">
                    <label asp-for="Password">Şifre</label>
                    <input asp-for="Password" type="password" placeholder="Şifrenizi girin" autocomplete="current-password" />
                    <i class="fas fa-lock icon"></i>
                    <span asp-validation-for="Password" class="validation-error"></span>
                </div>

                <div class="remember-me">
                    <input asp-for="RememberMe" type="checkbox" id="rememberMe" />
                    <label asp-for="RememberMe" for="rememberMe">Beni Hatırla</label>
                </div>

                <button type="submit" class="btn-login">
                    <i class="fas fa-sign-in-alt"></i> Giriş Yap
                </button>
            </form>

            <div class="register-link">
                Hesabınız yok mu? <a asp-action="Register" asp-controller="Account">Kayıt Ol</a>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@3.2.12/dist/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>