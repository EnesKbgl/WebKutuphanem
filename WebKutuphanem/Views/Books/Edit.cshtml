@model WebKutuphanem.Models.Book

@{
    ViewData["Title"] = "Kitabı Düzenle";
}

<link rel="stylesheet" href="~/css/add-book.css">

<div class="row mb-4">
    <div class="col-12">
        <h1 class="page-title">Kitabı Düzenle</h1>
        <p class="text-muted">"@Model.Title" kitabının bilgilerini güncelliyorsunuz</p>
    </div>
</div>

<div class="row justify-content-center">
    <div class="col-12 col-lg-8 col-xl-7">
        <div class="content-card">
            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="CreatedAt" />

                <div class="form-section mb-4">
                    <h5 class="form-section-title"><i class="bi bi-info-circle text-primary me-2"></i> Temel Bilgiler</h5>
                    <div class="row g-3">
                        <div class="col-12">
                            <label class="form-label">Kitap Başlığı</label>
                            <input asp-for="Title" class="form-control" required />
                        </div>
                        <div class="col-12 col-md-6">
                            <label class="form-label">Yazar</label>
                            <input asp-for="Author" class="form-control" required />
                        </div>
                        <div class="col-12 col-md-6">
                            <label class="form-label">ISBN</label>
                            <input asp-for="ISBN" class="form-control" />
                        </div>
                        <div class="col-12">
                            <label class="form-label">Kapak Görseli URL</label>
                            <input asp-for="CoverImage" class="form-control" />
                        </div>
                    </div>
                </div>

                <div class="form-section mb-4">
                    <h5 class="form-section-title"><i class="bi bi-bar-chart text-primary me-2"></i> Okuma Durumu</h5>
                    <div class="row g-3">
                        <div class="col-12 col-md-4">
                            <label class="form-label">Durum</label>
                            <select asp-for="Status" class="form-select" required>
                                <option value="to-read">Okunacak</option>
                                <option value="reading">Okuyor</option>
                                <option value="finished">Tamamlandı</option>
                            </select>
                        </div>
                        <div class="col-12 col-md-4">
                            <label class="form-label">Toplam Sayfa</label>
                            <input asp-for="TotalPages" class="form-control" type="number" min="1" required />
                        </div>
                        <div class="col-12 col-md-4">
                            <label class="form-label">Mevcut Sayfa</label>
                            <input asp-for="CurrentPage" class="form-control" type="number" min="0" />
                        </div>
                    </div>
                </div>

                <div class="form-actions">
                    <a asp-action="Index" class="btn btn-outline-secondary">İptal</a>
                    <button type="submit" class="btn btn-primary">Değişiklikleri Kaydet</button>
                </div>
            </form>
        </div>
    </div>
</div>